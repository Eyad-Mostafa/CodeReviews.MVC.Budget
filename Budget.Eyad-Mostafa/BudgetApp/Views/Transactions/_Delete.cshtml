@model BudgetApp.Models.Transaction

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Delete Transaction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure?</p>
                <ul>
                    <li><strong>Date:</strong> @Model.Date.ToString("yyyy-MM-dd")</li>
                    <li><strong>Category:</strong> @Model.Category?.Name</li>
                    <li><strong>Amount:</strong> @Model.Amount.ToString("C")</li>
                    <li><strong>Description:</strong> @Model.Description</li>
                </ul>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" asp-action="DeleteConfirmed" asp-route-id="@Model.TransactionId" method="post">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
